include ../mixins/project-card.mixin.pug

doctype html 
html(lang='en')
    head
        title Dashboard
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="stylesheet" href="/static/css/index.css")
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href="#")
                img(src="/static/images/Logo-Wide.png" height="30")
                | 
                | Stock Tracker
            .collapse.navbar-collapse
                .navbar-nav
                    a.nav-item.nav-link.active(href="/") Home
                    a.nav-item.nav-link(href="/logout") Logout

        #order.accordion
            .accordion-item
                h2#panelsStayOpen-headingOne.accordion-header
                    button.accordion-button(type='button' data-bs-toggle='collapse' data-bs-target='#panelsStayOpen-pending-order' aria-expanded='true' aria-controls='panelsStayOpen-pending-order')
                        | Pending Orders
                #panelsStayOpen-pending-order.accordion-collapse.collapse.show(aria-labelledby='panelsStayOpen-headingOne')
                    .accordion-body
                        .album.py-5.bg-light
                            .container
                                .row
                                    -
                                    if projects != "No Projects."
                                        each project in projects
                                            +project-card(project.name, project.desc, project.id, project.thumb)
                                    else 
                                        p No Projects.
                h2#panelsStayOpen-headingTwo.accordion-header
                    button.accordion-button.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#panelsStayOpen-completed-order' aria-expanded='false' aria-controls='panelsStayOpen-completed-order')
                        | Completed Orders
                #panelsStayOpen-completed-order.accordion-collapse.collapse(aria-labelledby='panelsStayOpen-headingTwo')
                    .accordion-body
                        .album.py-5.bg-light
                            .container
                                .row
                                    -
                                    if projects == "No Projects."
                                        p No Projects.
                                    else 
                                        each project in completed
                                            +project-card(project.name, project.desc, project.id, project.thumb)


    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
    script(script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")


